#!/usr/bin/env bash

if [ $# -ne 1 ]; then
  echo "usage:" 1>&2
  echo "${0} [file name | dir name]" 1>&2
  exit 1
fi

target="${1}"
ls "${target}" > /dev/null || exit 2

backupdir="/tmp/bk"
mkdir -p "${backupdir}"
backup=${backupdir}/$(basename ${target}).$(date +%F-%T).tar.gz

if [ -e "${backup}" ]; then
  echo "Error." 1>&2
  exit 3
fi

tar zcvf "${backup}" "${target}"
